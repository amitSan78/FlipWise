<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/titleChooseDeck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose Deck"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="16dp"
        android:fontFamily="@font/bungeeinlineregular"
        android:textColor="@color/SoftBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/deckListChoose"
        android:layout_width="384dp"
        android:layout_height="628dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleChooseDeck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/semitransparent_background"
        android:backgroundTint="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
